<div id="<%= dom_id friend %>">

<table class="table table-dark table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      
      <th scope="col">Full Name:</th>
      <th scope="col">Email:</th>
      <th scope="col">Phone:</th>
      <th scope="col">Twitter:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to friend.first_name+' '+friend.last_name, friend, class:"btn btn-success"%></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      
    </tr>
  </tbody>
</table>